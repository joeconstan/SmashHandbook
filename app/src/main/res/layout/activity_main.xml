        android:layout_below="@id/main_techbutton"
        android:layout_alignLeft="@+id/main_techbutton"
        android:id="@+id/main_pgrbutton"
        />
    <Button
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:text="Tier List"
        android:layout_below="@+id/main_termsbutton"
        android:layout_alignLeft="@+id/main_termsbutton"
        android:id="@+id/main_tierbutton"
        />
    <Button
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:text="Frame Data Stats"
        android:layout_below="@id/main_pgrbutton"
        android:layout_alignLeft="@id/main_pgrbutton"
        android:id="@+id/main_framedatabutton"
        />




