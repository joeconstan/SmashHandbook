    <Button
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:text="Characters"
        android:id="@+id/main_charbutton"
        />
    <Button
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:text="Tech"
        android:layout_toRightOf="@+id/main_charbutton"
        android:id="@+id/main_techbutton"
        />
