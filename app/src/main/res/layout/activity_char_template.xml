<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    >

<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_red_dark"
        android:elevation="4dp"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <ImageButton
            android:id="@+id/toolbar_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/toolbartext"
            android:background="@null"
            android:paddingLeft="200dp"
            android:src="@drawable/ic_info_outline" />

        <ImageButton
            android:id="@+id/toolbar_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/toolbar_info_button"
            android:background="@null"
            android:paddingLeft="12dp"
            android:src="@drawable/ic_settings_button" />


    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/character_image"
        android:layout_below="@id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/character_tier"
        android:layout_below="@id/character_image"
        android:textColor="@color/white"

        android:textSize="30sp"
        android:layout_centerHorizontal="true"

        />

   <TextView
        android:id="@+id/notableplayers"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/character_tier"

      />
    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/character_spec_tech"
        android:layout_toEndOf="@+id/notableplayers"
        android:layout_below="@+id/character_tier"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/character_desc_playstyle"
        android:layout_below="@id/character_spec_tech"
        android:textColor="@color/white"

        />


</RelativeLayout>
</ScrollView>