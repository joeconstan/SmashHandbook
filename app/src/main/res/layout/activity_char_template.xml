<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    >

<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <include layout="@layout/toolbar_custom"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/spacerchartem"
        />

    <ImageView
        android:paddingTop="15sp"
        android:id="@+id/character_image"
        android:layout_below="@id/spacerchartem"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="35sp"
        />


    <Button
        android:layout_width="match_parent"
        android:background="#5C5A59"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:id="@+id/character_spec_tech"
        android:layout_below="@+id/character_image"
        />

    <TextView
        android:id="@+id/char_notableplayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:layout_below="@+id/character_spec_tech"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/character_tier"
        android:layout_below="@id/char_notableplayers"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/character_desc_playstyle"
        android:layout_below="@id/character_tier"
        android:textColor="@color/white"
        android:paddingBottom="20sp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/character_guides"
        android:layout_below="@+id/character_desc_playstyle"
        android:autoLink="web"
        android:textColorLink="@color/dodgerblue"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/character_guides2"
        android:layout_below="@+id/character_guides"
        android:autoLink="web"
        android:textColorLink="@color/dodgerblue"
        />


</RelativeLayout>
</ScrollView>