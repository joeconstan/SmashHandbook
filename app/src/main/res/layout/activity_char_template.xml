<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_red_dark"
        android:elevation="4dp"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/characters"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <ImageButton
            android:id="@+id/toolbar_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/toolbartext"
            android:background="@null"
            android:paddingLeft="200dp"
            android:src="@drawable/ic_info_outline" />

        <ImageButton
            android:id="@+id/toolbar_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/toolbar_info_button"
            android:background="@null"
            android:paddingLeft="12dp"
            android:src="@drawable/ic_settings_button" />


    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/custom_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/character_name"
        android:layout_alignTop="@+id/character_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/character_tier"
        android:layout_alignBaseline="@+id/notableplayers"
        android:layout_alignBottom="@+id/notableplayers"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp" />

    <TextView
        android:id="@+id/notableplayers"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/character_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/character_spec_tech"
        android:layout_below="@+id/character_image"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/character_frame_data"
        android:layout_below="@+id/notableplayers"
        android:layout_alignLeft="@+id/notableplayers"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/character_desc_playstyle"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/character_tier"
        android:layout_alignEnd="@+id/character_tier"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="33dp" />





</RelativeLayout>